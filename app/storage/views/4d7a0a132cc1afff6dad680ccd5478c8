		<!-- CSRF Token -->
		<input type="hidden" name="_token" value="<?php echo e(csrf_token()); ?>" />
		<!-- ./ csrf token -->

		<input type="hidden" name="docker_name" value="<?php echo $docker_name; ?>" />

		
		<!-- cloud_account_id -->
		<div class="form-group <?php echo e($errors->has('email') ? 'error' : ''); ?>">
			<label class="col-md-2 control-label" for="cloud_account_id">Cloud Account</label>
			<div class="col-md-6">
				<select class="form-control" name="cloud_account_id" id="cloud_account_id" required>
					<?php foreach($cloud_account_ids as $key => $value): ?>
						<option value="<?php echo $value->id; ?>" data-cloud-provider="<?php echo e($value->cloudProvider); ?>" <?php echo e(Input::old('cloud_account_id', isset($deployment->cloud_account_id) && ($deployment->cloud_account_id == $key) ? 'selected="selected"' : '')); ?>><?php echo e($value->name); ?></option>
